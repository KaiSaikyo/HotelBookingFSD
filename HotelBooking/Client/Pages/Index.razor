@page "/"

<PageTitle>RoomScout.Org</PageTitle>

<header class="section__container header__container">
    <div class="header__image__container section__pearl">
        <div class="booking__container">
            <form>
                <div class="form__group">
                    <div class="input__group">
                        <input type="text" />
                        <label>Destination</label>
                    </div>
                    <p>Where are you going?</p>
                </div>
                <div class="form__group">
                    <div class="input__group">
                        <input type="text" />
                        <label>Check In</label>
                    </div>
                    <p>Add date</p>
                </div>
                <div class="form__group">
                    <div class="input__group">
                        <input type="text" />
                        <label>Check Out</label>
                    </div>
                    <p>Add date</p>
                </div>
                <div class="form__group">
                    <div class="input__group">
                        <input type="text" />
                        <label>Guests & Rooms</label>
                    </div>
                    <p>Add guests & rooms</p>
                </div>
            </form>
            <button class="btn"><i class="ri-search-line"></i></button>
        </div>
    </div>

</header>

<section style="margin-top: 15px;">
    <div class="section__container section__white">
        <div class="slider-wrapper">
            <div class="slider">
                <img id="slide-1" src="./css/img/img1.jpg" alt="Hotel 1">
                <img id="slide-2" src="./css/img/img2.jpg" alt="Hotel 2">
                <img id="slide-3" src="./css/img/img3.jpg" alt="Hotel 3">
            </div>
            <div class="slider-nav">
                <a href="#slide-1"></a>
                <a href="#slide-2"></a>
                <a href="#slide-3"></a>
            </div>
        </div>
    </div>
</section>
