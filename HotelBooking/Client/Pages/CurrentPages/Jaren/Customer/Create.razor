@page "/customer/create"
@using HotelBooking.Client.Components
@inject HttpClient _client
@inject NavigationManager _navManager

<PageTitle>RoomScout.Org - Create Customers</PageTitle>

<div class="main-background">
	<div class="form-background">
		<EditForm Model="@customer" OnValidSubmit="CreateCustomer">
			<DataAnnotationsValidator />
			<ValidationSummary />

			<div class="form-group">
				<label>Name: </label>
				<div>
					<InputText @bind-Value="@customer.Name" class="form-control" />
					<ValidationMessage For="@(() => customer.Name)" />
				</div>
			</div>
			<br />
			<div class="form-group">
				<label>Email: </label>
				<div>
					<InputText @bind-Value="@customer.Email" class="form-control" />
					<ValidationMessage For="@(() => customer.Email)" />
				</div>
			</div>
			<br />
			<div class="form-group">
				<label>Password: </label>
				<div>
					<InputText @bind-Value="@customer.Password" class="form-control" />
					<ValidationMessage For="@(() => customer.Password)" />
				</div>
			</div>
			<br />
			<div class="form-group">
				<label>Mobile: </label>
				<div>
					<InputText @bind-Value="@customer.Mobile" class="form-control" />
					<ValidationMessage For="@(() => customer.Mobile)" />
				</div>
			</div>
			<br />
			<div class="form-group">
				<label>Payment Type: </label>
				<div>
					<InputText @bind-Value="@customer.PaymentType" class="form-control" />
					<ValidationMessage For="@(() => customer.PaymentType)" />
				</div>
			</div>
			<br />
			<div class="form-group">
				<label>Card Number: </label>
				<div>
					<InputText @bind-Value="@customer.CardNumber" class="form-control" />
					<ValidationMessage For="@(() => customer.CardNumber)" />
				</div>
			</div>
			<br />
			<div class="form-group">
				<label>Cvv: </label>
				<div>
					<InputText @bind-Value="@customer.Cvv" class="form-control" />
					<ValidationMessage For="@(() => customer.Cvv)" />
				</div>
			</div>
			<br />
			<div class="form-group">
				<label>Expiry Date: </label>
				<div>
					<InputDate @bind-Value="@customer.ExpiryDate" class="form-control" />
					<ValidationMessage For="@(() => customer.ExpiryDate)" />
				</div>
			</div>
			<br />
			<div class="button-wrapper">
				<button type="submit" class="left-aligned-button">
					Create Customer
				</button>
			</div>
			<BackToList Target="customer" />
		</EditForm>
	</div>
</div>

@code {
	private Customer customer = new Customer();

	private async Task CreateCustomer()
	{
		await _client.PostAsJsonAsync(Endpoints.CustomersEndpoint, customer);
		_navManager.NavigateTo("/customer/");
	}
}